{
  "name": "professor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev -p 3002",
    "build": "next build",
    "start": "next start",
    "postbuild": "next-sitemap",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "lint-eslint": "eslint --ignore-path .eslintignore --ext .js,.jsx,.ts,.tsx",
    "lint-prettier": "prettier --ignore-path .prettierignore"
  },
  "dependencies": {
    "firebase": "^8.3.3",
    "firebase-admin": "^9.6.0",
    "framer-motion": "^4.1.2",
    "next": "10.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.0.4",
    "slugify": "^1.5.0",
    "styled-components": "^5.2.3"
  },
  "devDependencies": {
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.23.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.3",
    "lint-prepush": "^2.1.0",
    "next-sitemap": "^1.6.25",
    "typescript": "^4.2.4"
  },
  "lint-prepush": {
    "tasks": {
      "base": "main",
      "./**/*.{js,jsx,ts,tsx}": [
        "npm run lint-eslint -- --fix",
        "npm run lint-prettier -- --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run type-check && lint-prepush"
    }
  }
}
